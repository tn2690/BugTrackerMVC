@model IEnumerable<BugTrackerMVC.Models.Project>
@using BugTrackerMVC.Services.Interfaces
@using BugTrackerMVC.Models.Enums
@inject IBTFileService _BTFileService
@inject IBTProjectService _BTProjectService

@{
    ViewData["Title"] = "My Projects";
}

<!-- DataTable -->
<link rel="stylesheet" href="~/vendors/dataTable/datatables.min.css" type="text/css">

<div class="page-header">
    <div>
        <h3>My Projects</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="Index" asp-controller="Home">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#">Projects</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">My Projects</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="card-body">

                @* only admin or project manager can create projects *@
                @if (User.IsInRole(nameof(BTRoles.Admin)) || User.IsInRole(nameof(BTRoles.ProjectManager))) {
                    <p>
                        <a asp-action="Create" class="btn btn-outline-primary rounded-pill">Create New</a>
                    </p>
                }
                <table id="myProjectsTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Created)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StartDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EndDate)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EndDate)
                                </td>
                                <td>
                                    @if (User.IsInRole(nameof(BTRoles.Admin)) || User.IsInRole(nameof(BTRoles.ProjectManager)))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary rounded-pill">Edit</a>
                                    }
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary rounded-pill">Details</a>
                                    @if (User.IsInRole(nameof(BTRoles.Admin)))
                                    {
                                        <a asp-action="Archive" asp-route-id="@item.Id" class="btn btn-outline-danger rounded-pill">Archive</a>
                                    }
                                    @{
                                        BTUser? projectManager = await _BTProjectService.GetProjectManagerAsync(item.Id);
                                    }
                                    @if (projectManager is null && User.IsInRole(nameof(BTRoles.Admin)))
                                    {
                                        <a class="btn btn-sm btn-outline-info rounded-pill mx-2" asp-action="AssignProjectManager" asp-route-id="@item.Id">Assign PM</a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-sm btn-outline-secondary rounded-pill" asp-action="AssignProjectManager" asp-route-id="@item.Id">@(projectManager?.FullName ?? "Unassigned")</a>
                                    }
                                    <a asp-action="AddMembers" asp-route-id="@item.Id" class="btn btn-outline-primary rounded-pill">Add Member(s)</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

@section scripts {

    <!-- DataTable -->
    <script src="~/vendors/dataTable/datatables.min.js"></script>
    <script src="~/assets/js/examples/datatable.js"></script>

    <script>
        $('#myProjectsTable').DataTable({
            "scrollY": "500px",
            "scrollCollapse": true,
            responsive: true
        });

        $(document).ready(function () {
            $('#myProjectsTable').DataTable();
        });
    </script>
}