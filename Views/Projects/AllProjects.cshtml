@model IEnumerable<BugTrackerMVC.Models.Project>
@using BugTrackerMVC.Services.Interfaces
@using BugTrackerMVC.Enums
@inject IFileService _FileService
@inject IBTProjectService _BTProjectService

@{
    ViewData["Title"] = "All Projects";
}

<div class="container mt-5">
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-12">
                <div class="card-body">
                    <h1>All Projects</h1>

                    <p>
                        <a asp-action="Create">Create New</a>
                    </p>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Created)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StartDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EndDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImageFormFile)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Archived)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Company)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Members)
                                </th>
                                @*<th>
                                @Html.DisplayNameFor(model => model.Tickets)
                                </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.ProjectPriority)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @{
                                            BTUser? projectManager = await _BTProjectService.GetProjectManagerAsync(item.Id);
                                        }
                                        
                                        @if (projectManager is null && User.IsInRole(nameof(BTRoles.Admin)))
                                        {
                                            <a class="btn btn-sm btn-outline-info" asp-action="AssignProjectManager" asp-route-id="@item.Id">Assign PM</a>
                                        }
                                        else {
                                            <text>@(projectManager?.FullName ?? "Unassigned")</text>
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Created)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StartDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EndDate)
                                    </td>
                                    <td>
                                        <img src="@_FileService.ConvertByteArrayToFile(item.ImageFileData!, item.ImageFileType!, (int)DefaultImg.ProjectImg)" class="img-fluid" style="max-height: 200px;" alt="project image" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Archived)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Company!.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Members)
                                    </td>
                                    @*<td>
                                    @Html.DisplayFor(modelItem => item.Tickets!.Title)
                                    </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProjectPriority!.Name)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Archive" asp-route-id="@item.Id">Archive</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
