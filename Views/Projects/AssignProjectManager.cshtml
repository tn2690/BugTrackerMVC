@model BugTrackerMVC.Models.Project
@using BugTrackerMVC.Services.Interfaces
@using BugTrackerMVC.Enums
@inject IFileService _ImageService

@{
    ViewData["Title"] = "Assign Project Manager";
}

<div class="container mt-5">

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post" asp-controller="Projects" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CompanyId" />
                <input type="hidden" asp-for="Created" />
                <input type="hidden" asp-for="ImageFileData" />
                <input type="hidden" asp-for="ImageFileType" />
                <input type="hidden" asp-for="Archived" />

                <h1>Assign Project Manager</h1>
                <hr />

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" disabled class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" disabled class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" disabled class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" disabled class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="">
                    <label asp-for="ProjectPriorityId" class="control-label">Priority</label>
                    <select asp-for="ProjectPriorityId" disabled class ="form-control" asp-items="ViewBag.ProjectPriorityId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary rounded-pill my-2" />
                </div>
            </form>
        </div>
    </div>

    <div class="my-2">
        <a asp-action="AllProjects">Back to List</a>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
