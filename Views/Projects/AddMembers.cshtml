@model AssignPMViewModel
@using BugTrackerMVC.Models.ViewModels

@{
    ViewData["Title"] = "Add Members";
}

<!-- Add Members to Project -->

<div class="page-header">
    <div>
        <h3>Add Developer(s) & Submitter(s)</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="Index" asp-controller="Home">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-action="AllProjects">Projects</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-action="Details" asp-route-id="@Model.Project!.Id">Project Details</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Add Developer(s) & Submitter(s)<li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-12 col-lg-6">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Project: @Model.Project!.Name</div>
            </div>
            <div class="card-body">
                <div class="col-12 col-lg-12">
                    <form asp-action="AddMembers" method="post" class="d-flex flex-column">
                        <select asp-items="Model.SubList" class="d-none" multiple asp-for="SelectedSubmitters">
                        </select>
                        <input type="hidden" asp-for="Project!.Id" />

                        <label asp-for="DevId" class="control-label">Developers</label>
                        <select asp-items="Model.DevList" class="form-select" multiple asp-for="SelectedDevelopers">
                        </select>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="w-15 btn btn-outline-primary rounded-pill my-2">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-6">
        <div class="card my-5">
            <div class="card-body">
                <div class="col-12 col-lg-12">
                    <form asp-action="AddMembers" method="post" class="d-flex flex-column">
                        <select asp-items="Model.DevList" class="d-none" multiple asp-for="SelectedDevelopers">
                        </select>
                        <input type="hidden" asp-for="Project!.Id" />

                        <label asp-for="SubId" class="control-label">Submitters</label>
                        <select asp-items="Model.SubList" class="form-select" multiple asp-for="SelectedSubmitters">
                        </select>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="w-15 btn btn-outline-primary rounded-pill my-2">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

<div class="col-12 col-lg-12">
    <div class="d-flex justify-content-center">
        <a asp-action="Details" asp-route-id="@Model.Project!.Id" class="btn btn-outline-primary rounded-pill">Back to Project Details</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
