@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<body class="form-membership">

    <div class="form-wrapper">

        <!-- form -->
        <section>
            <form id="account" method="post">

                <h1>Welcome back!</h1>
                <h4>Log In</h4>
                <hr />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating my-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-between">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <a id="forgot-password" asp-page="./ForgotPassword">Reset password</a>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="btn btn-lg btn-primary rounded-pill">Log in</button>
                </div>

                <hr>
                <p class="text-muted">Don't have an account?</p>
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-light btn-sm rounded-pill">Register now!</a>
                
            </form>
        </section>
        <!-- ./ form -->

    </div>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
