@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<body class="form-membership">

    <div class="form-wrapper">

        <!-- form -->
        <section>
            <form id="account" method="post">

                <h1>Welcome back!</h1>
                <h4>Log In</h4>
                <hr />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating my-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-between">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" checked="" asp-for="Input.RememberMe">
                        <label class="custom-control-label" asp-for="Input.RememberMe">Remember me</label>
                    </div>
                    <a id="forgot-password" asp-page="./ForgotPassword">Reset password</a>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="btn btn-lg btn-outline-primary rounded-pill">Log in</button>
                </div>

                <hr>
                <p class="text-muted">Don't have an account?</p>
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-light btn-sm rounded-pill">Register now!</a>

            </form>
        </section>
        <!-- ./ form -->

        <section>
            <hr />
            <p class="text-muted">Or use one of the Demo Accounts to log in. </p>

            <div class="mb-1 text-center">
                <form class="" id="account" method="post">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-12 col-lg-6">
                                <button type="submit" style="width:inherit;height:min-content" class="btn btn-outline-light btn-sm rounded-pill p-10 m-2" name="demoEmail" value="DemoAdminEmail">Demo Admin</button>
                                <button type="submit" style="width:inherit;height:min-content" class="btn btn-outline-light btn-sm rounded-pill p-10 m-2" name="demoEmail" value="DemoPMEmail">Demo PM</button>
                            </div>
                            <div class="col-12 col-lg-6">
                                <button type="submit" style="width:inherit;height:min-content" class="btn btn-outline-light btn-sm rounded-pill p-10 m-2" name="demoEmail" value="DemoDevEmail">Demo Developer</button>
                                <button type="submit" style="width:inherit;height:min-content" class="btn btn-outline-light btn-sm rounded-pill p-10 m-2" name="demoEmail" value="DemoSubEmail">Demo Submitter</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>

    </div>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
